{
  "name": "anthony-nolan/blt-behat",
  "description": "Behat integration for Acquia BLT",
  "license": "GPL-2.0+",
  "authors":[
    {
      "name": "Anthony Nolan Engineering",
      "homepage": "https://www.anthonynolan.org",
      "role": "Maintainer"
    }
  ],
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  },
  "require": {
    "behat/behat": "^3.1",
    "behat/gherkin" : "^4.6.1",
    "bex/behat-screenshot" : "^2",
    "dmore/behat-chrome-extension" : "^1.0.0",
    "drupal/drupal-extension" : "^4",
    "jarnaiz/behat-junit-formatter" : "^1.3.2"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Acquia\\BltBehat\\": "./src/"
    }
  }
}
